<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arieldiax.codelab.fireblood">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/configuration_google_maps_api_key" />

        <activity
            android:name=".ui.launch.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppSplashTheme">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.launch.WelcomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.registration.signup.SignUpActivity"
            android:label="@string/authentication_title_sign_up"
            android:parentActivityName=".ui.launch.WelcomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.registration.signin.SignInActivity"
            android:label="@string/authentication_title_sign_in"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.launch.WelcomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.registration.signup.PlacePickerActivity"
            android:label="@string/authentication_title_place_picker"
            android:screenOrientation="portrait"
            android:theme="@style/AppPlacePickerTheme" />

        <activity
            android:name=".ui.registration.signin.ForgotPasswordActivity"
            android:label="@string/authentication_title_forgot_password"
            android:parentActivityName=".ui.registration.signin.SignInActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.verification.VerifyEmailActivity"
            android:label="@string/authentication_title_verify_email"
            android:screenOrientation="portrait"
            android:theme="@style/AppMainTheme" />

        <activity
            android:name=".ui.navigation.notifications.NotificationsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoAnimationTheme" />

        <activity
            android:name=".ui.navigation.search.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoAnimationTheme" />

        <activity
            android:name=".ui.navigation.profile.ProfileActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoAnimationTheme" />

        <activity
            android:name=".ui.navigation.profile.ViewPhotoActivity"
            android:parentActivityName=".ui.navigation.profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppViewPhotoTheme" />

        <activity
            android:name=".ui.navigation.profile.EditProfileActivity"
            android:label="@string/navigation_item_edit_profile"
            android:parentActivityName=".ui.navigation.profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppEditProfileTheme" />
    </application>
</manifest>
