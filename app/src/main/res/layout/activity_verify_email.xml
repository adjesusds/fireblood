<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verify_email_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    tools:context=".ui.VerifyEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_none"
            android:layout_margin="@dimen/margin_standard"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_logo_image_view"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:transitionName="@string/transition_app_logo_image_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_half"
                android:fontFamily="sans-serif-light"
                android:text="@string/authentication_congratulations"
                android:textAppearance="@android:style/TextAppearance.Material.Headline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_half"
                android:fontFamily="sans-serif-light"
                android:text="@string/authentication_an_email_has_been_sent_to"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_half"
                android:textAppearance="@android:style/TextAppearance.Material.Subhead"
                tools:text="foo@bar.com" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/authentication_havent_received_the_email_yet"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <FrameLayout
            style="@style/AppInverseBorderlessButtonWrapper"
            android:layout_marginTop="@dimen/margin_half">

            <Button
                android:id="@+id/send_email_button"
                style="@style/AppInverseBorderlessButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/authentication_send_email" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>
