<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_bottom_sheet_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_standard"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="@color/colorPrimary"
        tools:text="Title" />

    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginRight="@dimen/margin_standard"
        android:layout_marginTop="@dimen/margin_half"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:textColor="@android:color/black"
        tools:text="Message" />

    <TextView
        android:id="@+id/positive_button_text_view"
        style="@style/AppConfirmBottomSheetDialogOption"
        android:drawableLeft="@drawable/ic_done_darker_gray_24dp"
        tools:text="Label" />

    <TextView
        android:id="@+id/negative_button_text_view"
        style="@style/AppConfirmBottomSheetDialogOption"
        android:drawableLeft="@drawable/ic_close_darker_gray_24dp"
        tools:text="Label" />
</LinearLayout>
