<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navigation.search.SearchActivity">

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/top_container_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_double_half"
        android:paddingEnd="@dimen/margin_standard"
        android:paddingStart="@dimen/margin_standard"
        android:paddingTop="@dimen/margin_standard">

        <android.support.v7.widget.CardView
            style="@style/AppCardView"
            android:layout_marginTop="@dimen/margin_none"
            app:cardElevation="@dimen/margin_half">

            <LinearLayout
                android:id="@+id/card_container_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/ic_arrow_back_red_24dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/province_spinner"
                    style="@style/AppSpinner"
                    android:layout_width="@dimen/margin_none"
                    android:layout_marginTop="@dimen/margin_none"
                    android:layout_weight="7" />

                <Spinner
                    android:id="@+id/blood_type_spinner"
                    style="@style/AppSpinner"
                    android:layout_width="@dimen/margin_none"
                    android:layout_marginTop="@dimen/margin_none"
                    android:layout_weight="3" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <View
        android:id="@+id/start_container_view"
        android:layout_width="@dimen/margin_standard"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_container_linear_layout"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_container_linear_layout" />

    <ProgressBar
        android:id="@+id/map_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_container_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_standard"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />

    <View
        android:id="@+id/end_container_view"
        android:layout_width="@dimen/margin_standard"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_container_linear_layout"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/top_container_linear_layout" />

    <LinearLayout
        android:id="@+id/bottom_container_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/margin_standard">

        <Button
            android:id="@+id/search_for_hospitals_button"
            style="@style/AppButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/title_search_for_hospitals" />
    </LinearLayout>
</RelativeLayout>
