<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application themes. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:itemTextAppearance">@style/AppItemTextAppearance</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppSpinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/AppSpinnerItemStyle</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppBaseTheme" parent="AppTheme">

        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowEnterTransition">@transition/slide_base</item>
        <item name="android:windowExitTransition">@transition/slide_base</item>
        <item name="colorControlActivated">@color/colorPrimaryText</item>
        <item name="colorControlNormal">@color/colorSecondaryText</item>
        <item name="themeName">@string/theme_name_app_base</item>
    </style>

    <style name="AppMainTheme" parent="AppTheme">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/tertiary_text_light</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterTransition">@null</item>
        <item name="android:windowExitTransition">@null</item>
        <item name="themeName">@string/theme_name_app_main</item>
    </style>

    <style name="AppNoAnimationTheme" parent="AppMainTheme">

        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Custom application themes. -->
    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowBackground">@drawable/window_background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppPlacePickerTheme" parent="AppMainTheme">

        <item name="android:windowBackground">@color/colorMapBackground</item>
    </style>

    <style name="AppViewPhotoTheme" parent="AppMainTheme">

        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowEnterTransition">@transition/fade_view_photo</item>
        <item name="android:windowExitTransition">@transition/fade_view_photo</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="AppEditProfileTheme" parent="AppMainTheme">

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowEnterTransition">@transition/slide_base</item>
        <item name="android:windowExitTransition">@transition/slide_base</item>
    </style>

    <style name="AppDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowTitleStyle">@style/AppProgressDialogTitleStyle</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppBottomNavigationViewTheme">

        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <!-- Custom application styles. -->
    <style name="AppSpinnerDropDownItemStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">

        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="AppSpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">

        <item name="android:paddingStart">@dimen/margin_none</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
    </style>

    <style name="AppProgressDialogTitleStyle" parent="@android:style/TextAppearance.Material.Title">

        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Custom application appearances. -->
    <style name="AppItemTextAppearance">

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppErrorTextAppearance" parent="@android:style/TextAppearance.Material.Body1" />

    <style name="AppBaseErrorTextAppearance" parent="AppErrorTextAppearance">

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppMainErrorTextAppearance" parent="AppErrorTextAppearance">

        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Custom application components. -->
    <style name="AppVerticalDividerView">

        <item name="android:layout_height">@dimen/margin_none</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppButton">

        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Button</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppInverseButton">

        <item name="android:backgroundTint">@color/colorPrimaryText</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppBorderlessButtonWrapper">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard_single_minus</item>
        <item name="android:layout_marginStart">@dimen/margin_standard_single_minus</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppBorderlessButton">

        <item name="android:layout_height">@dimen/borderless_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Button</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppInverseBorderlessButtonWrapper">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard_single_minus</item>
        <item name="android:layout_marginStart">@dimen/margin_standard_single_minus</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimaryText</item>
    </style>

    <style name="AppInverseBorderlessButton">

        <item name="android:layout_height">@dimen/borderless_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppEditTextWrapper">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppBaseEditTextWrapper" parent="AppEditTextWrapper">

        <item name="errorTextAppearance">@style/AppBaseErrorTextAppearance</item>
    </style>

    <style name="AppMainEditTextWrapper" parent="AppEditTextWrapper">

        <item name="errorTextAppearance">@style/AppMainErrorTextAppearance</item>
    </style>

    <style name="AppEditText">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
    </style>

    <style name="AppBaseEditText" parent="AppEditText">

        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppMainEditText" parent="AppEditText">

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppFormFieldText">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_quarter</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Caption</item>
    </style>

    <style name="AppBaseFormFieldText" parent="AppFormFieldText">

        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppMainFormFieldText" parent="AppFormFieldText">

        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="AppRadioGroup">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppRadioButton">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_quarter_half</item>
        <item name="android:layout_marginStart">@dimen/margin_quarter_half_minus</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/margin_none</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
    </style>

    <style name="AppBaseRadioButton" parent="AppRadioButton">

        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppMainRadioButton" parent="AppRadioButton">

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppSpinner" parent="Widget.AppCompat.Spinner.Underlined">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppSwitch">

        <item name="android:layout_height">@dimen/form_field_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppUnderlinedView">

        <item name="android:layout_height">@dimen/margin_single</item>
        <item name="android:layout_marginEnd">@dimen/margin_quarter</item>
        <item name="android:layout_marginStart">@dimen/margin_quarter</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppBaseUnderlinedView" parent="AppUnderlinedView">

        <item name="android:background">@color/colorBaseUnderlinedView</item>
    </style>

    <style name="AppMainUnderlinedView" parent="AppUnderlinedView">

        <item name="android:background">@color/colorMainUnderlinedView</item>
    </style>

    <style name="AppConfirmBottomSheetDialogOption">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/margin_double</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppCardView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">@dimen/margin_quarter_half</item>
        <item name="contentPadding">@dimen/margin_standard</item>
    </style>

    <style name="AppCardViewSubheading">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppCardViewBody">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_profile_text_view</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
    </style>

    <style name="AppCardViewOption">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/margin_standard</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
    </style>
</resources>
